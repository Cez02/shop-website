<div class="p-2 d-flex flex-grow-1 justify-content-center align-items-center">
<div class="w-50 card mb-3" style="cursor: pointer;" onclick="this.closest('form').submit()">
    <div class="h-100 row g-0">
        <div class="col-md-8">
            <div class="card-body">
                <p class="card-title">Name: <%= user.name %> <%= user.surname %></p>
                <p class="card-text">Email: <%= user.email %></p>
                <p class="card-text">ID:    <%= user.id %></p>
            </div>
        </div>
        <div class="d-flex flew-grow-2">
            <form action="/admin/users/update" method="get" class="p-2 ps-4">
                <input type="hidden" id="user_id" name="user_id" value="<%= user._id %>">
                <button class="btn btn-primary">Update</button>
            </form>
            <form action="/admin/users/delete" method="post" class="p-2">
                <input type="hidden" id="id" name="id" value="<%= user._id %>">
                <button class="btn btn-primary">Delete</button>
            </form>
        </div>
    </div>
</div>
</div>