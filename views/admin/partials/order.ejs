<div class="p-2 d-flex flex-grow-1 justify-content-center align-items-center">
<div class="w-50 card mb-3" style="cursor: pointer;" onclick="this.closest('form').submit()">
    <div class="h-50 row g-0">
        <div class="col-md-8">
            <div class="card-body">
                <p class="card-title">Order ID:   <%= order.id %><br>
                User email:     <%= order.user_email %><br>
                Order date:  <%= order.date %><br>
                Order price: <%= order.price %><br>
                Order cart: <br>
                <% for (var i = 0; i < cart.length; i++) { %>
                    <%= cart[i].name %> <%= cart[i].price %> <br>
                <% } %>
                Order status: <%= order.orderStatus %> <br> 
            </p>
            </div>
            <div class="d-flex flew-grow-2">
                <form action="/admin/orders/delete" method="post" class="p-2">
                    <input type="hidden" id="id" name="id" value="<%= order._id %>">
                    <button class="btn btn-primary">Delete</button>
                </form>
                <form action="/admin/orders/updateStatus" method="post" class="p-2">
                    <input type="hidden" id="id" name="id" value="<%= order._id %>">
                    <input type="radio" name="orderStatus" id="'Choice1" value="Open" <% if (order.orderStatus == 'Open') { %> checked <% } %> %>>
                    <label for="contactChoice1">open</label>
                    <input type="radio" name="orderStatus" id="'Choice2" value="Confirmed" <% if (order.orderStatus == 'Confirmed') { %> checked <% } %>>
                    <label for="contactChoice2">confirmed</label>
                    <input type="radio" name="orderStatus" id="'Choice3" value="Completed" <% if (order.orderStatus == 'Completed') { %> checked <% } %>>
                    <label for="contactChoice3">completed</label>
                    <button class="btn btn-primary">Change order state</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>